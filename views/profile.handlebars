<div class="container">
    <div class="row">
        <div class="col lg-5">
            <div class="card mb-3">
                <div class="card-header">Authored Entries</div>
                <div class="card-body">
                    <h5 class="card-title">Your gifts to the world:</h5>
                    <ul>
                        {{#if Joke}}
                        {{#each Joke}}
                        {{> authoredList}}
                        {{/each}}
                        {{else}}
                        <p class="text-muted">You don't seem to have any jokes. Why not add one?</p>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col lg-5">
            <div class="card mb-3">
                <div class="card-header">Gift a laugh!</div>
                <div class="card-body">
                    <h5 class="card-title">Submit a joke below:</h5>
                    <div class="mb-3">
                        <label for="jokeSource" class="form-label">Origin</label>
                        <input type="text" class="form-control" id="jokeSource"
                            placeholder="Where did this spark of brilliance come from?">
                    </div>
                    <div class="mb-3">
                        <label for="jokeAuthor" class="form-label">Author</label>
                        <input type="text" class="form-control" id="jokeAuthor" placeholder="Who said or wrote it?">
                    </div>
                    <div class="mb-3">
                        <label for="jokeQuote" class="form-label">The Joke</label>
                        <textarea class="form-control" id="jokeQuote" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success" id="jokeSubmit">Send it!</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col lg-10">
            <div class="card mb-3">
                <div class="card-header text-center">Looking for inspiration?</div>
                <div class="card-body">
                    <h5 class="card-title text-center">Don't groan it alone! Click below for a random joke.</h5>
                    <p class="lead" id="setupTag"></p>
                    <p class="lead" id="punchLineTag"></p>
                </div>
                <button type="button" class="btn btn-success" id="randButton">One Joke, Please.</button>
            </div>
        </div>
    </div>
</div>