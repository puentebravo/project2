<div class="body">
    <div class="container-md">
        <div class="row align-items-center">
            <div class="col lg-3"></div>
            <div class="col lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="lead text-center">Groaner of the day:</p>
                        {{> jokeoftheday }}
                    </div>
                </div>
            </div>
            <div class="col lg-3"></div>
        </div>
        <div class="row align-items-center">
            <div class="col lg-3"></div>
            <div class="col lg-6">
                <div class="card">
                    <div class="card-header">
                        <h6>Welcome to the Dadabase! Use the form below to create your account.</h6>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="usernameInput" class="form-label">Username</label>
                                <input type="email" class="form-control" id="usernameInput"
                                    aria-describedby="userNameHelp">
                                <div id="userNameHelp" class="form-text">Please enter a valid email.</div>
                            </div>
                            <div class="mb-3">
                                <label for="passInput" class="form-label">Password</label>
                                <input type="password" class="form-control" id="passCreate">
                                <div id="passwordHelpBlock" class="form-text">
                                    Please create a password that is 6-20 characters long.
                                </div>
                                <div class="mb-3">
                                    <label for="passInput" class="form-label">Verify password</label>
                                    <input type="password" class="form-control" id="passVerify">
                                    <span class="text-muted" id="message"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success" id="signBtn">Submit</button>
                        </form>
                    </div>
                    <div class="card-footer">
                        <p class="text-muted">Have an account already? <a href="/">Sign in here!</a></p>
                    </div>
                </div>
            </div>
            <div class="col lg-3"></div>
